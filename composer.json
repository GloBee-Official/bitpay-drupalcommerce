{
    "name": "GloBee-Official/bitpay-drupalcommerce",
    "description": "GloBee Payment Module for Drupal Commerce",
    "version": "2.3.0",
    "type": "drupalcommerce-module",
    "keywords": ["bitcoin", "bitpay", "drupalcommerce", "payment", "btc", "xbt"],
    "homepage": "https://github.com/GloBee-Official/bitpay-drupalcommerce",
    "license": "MIT",
    "authors": [
        {
            "name": "GloBee, Inc.",
            "homepage": "https://globee.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url":  "https://github.com/GloBee-Official/php-bitpay-client.git"
        }
    ],
    "support": {
        "email": "support@globee.com",
        "issues": "https://github.com/GloBee-Official/bitpay-drupalcommerce/issues"
    },
    "require": {
        "php" : ">=5.4.0",
        "paybee/php-client" : "dev-master@dev"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "squizlabs/php_codesniffer": "2.*",
        "codegyre/robo": "*",
        "drush/drush": "7.0.*@dev",
        "boedah/robo-drush": "~2.1",
        "vlucas/phpdotenv": "~1.1.0",
        "drupal/coder": "~8.2"
    },
    "minimum-stability": "stable",
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "source"
    }
}
